alias ll="ls -lah"
alias cdd="cd /home/luka/Downloads"
alias mkdir="mkdir -p"
alias untar="tar -xvzf"
alias sz="du -sh"
alias rm="rm -i"
alias cd="HOME=/home/luka/testing_area cd"
alias reboot="qdbus org.kde.Shutdown /Shutdown logoutAndReboot"
alias ranger=". ranger"
sza() {
	for dir in $1/*
	do
	du -sh $dir
	done
}
chmodr () {
	find . -type f -exec chmod $1 {} + -o -type d -exec chmod $2 {} +
}
